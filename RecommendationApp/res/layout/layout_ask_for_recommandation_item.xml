<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_WHITE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_category"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/BG_WHITE" >

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="电影"
            android:textSize="20dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/kz_cell_topline" />

    <RelativeLayout
        android:id="@+id/rl_user_entity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="@dimen/badge_size"
            android:layout_height="@dimen/badge_size"
            android:layout_alignParentLeft="true"
            android:src="@drawable/user_icon" />

        <TextView
            android:id="@+id/tv_user_entity"
            style="@style/homepage_title_category_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_badge"
            android:text="小胡 推荐了 APP" >
        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        style="@style/homepage_title_category_style"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="10dp"
        android:text="手机上可以画图的app"
        android:textColor="@color/BG_BLACK"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/kz_cell_topline"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_response"
        style="@style/homepage_title_category_style"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="小西，小将等5个好友回答了他"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btn_rec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/recommandation_for_ta"
            android:textSize="16sp" >
        </Button>

        <Button
            android:id="@+id/btn_see_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/see_all_recommendation"
            android:textSize="16sp" >
        </Button>
    </LinearLayout>

</LinearLayout>