<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:background="@drawable/choose_category_item_background"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_category_item"
        style="@style/category_item_style"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/img_checked"
        android:gravity="center_vertical"
        android:text="电影" />

    <ImageView
        android:id="@+id/img_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_category_liked"
        android:visibility="gone" >
    </ImageView>

</RelativeLayout>