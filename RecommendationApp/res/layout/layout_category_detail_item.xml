<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/category_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.7"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_category"
            style="@style/category_style"
            android:layout_alignParentLeft="true"
            android:text="电影" />

        <TextView
            android:id="@+id/tv_category_detail"
            style="@style/category_detail_info_style"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_category"
            android:text="10个圈内朋友"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category_update_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.3"
        android:gravity="center_vertical|right" >

        <Button
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_publish_background"
            android:text="+加入" >
        </Button>

        <ImageView
            android:id="@+id/img_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_category_liked"
            android:visibility="gone" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>